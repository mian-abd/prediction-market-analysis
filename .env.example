# Anthropic API (for Claude analysis - user-triggered only)
ANTHROPIC_API_KEY=sk-ant-...

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/markets.db

# Polymarket (no auth needed for read-only)
POLYMARKET_GAMMA_URL=https://gamma-api.polymarket.com
POLYMARKET_CLOB_URL=https://clob.polymarket.com

# Kalshi (no auth needed for public endpoints)
KALSHI_API_URL=https://api.elections.kalshi.com/trade-api/v2

# GDELT (free, no auth)
GDELT_API_URL=https://api.gdeltproject.org/api/v2/doc/doc

# Pipeline settings
PRICE_POLL_INTERVAL_SEC=60
ORDERBOOK_POLL_INTERVAL_SEC=300
MARKET_REFRESH_INTERVAL_SEC=3600

# Arbitrage settings
MIN_SINGLE_MARKET_PROFIT_PCT=0.5
MIN_CROSS_PLATFORM_SPREAD_PCT=2.5
MAX_POSITION_USD=100
MAX_TOTAL_EXPOSURE_USD=1000

# Redis (optional; for real-time WebSocket price stream and arb detection)
# On Railway, set REDIS_URL to your Redis service URL (e.g. ${{Redis.REDIS_URL}})
REDIS_URL=redis://localhost:6379

# Server
API_HOST=0.0.0.0
API_PORT=8000
FRONTEND_URL=http://localhost:5173
